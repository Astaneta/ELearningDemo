{
    "Logging":{
        "LogLevel": {
            "Default":"Warning"
        }
    },

    "ConnectionStrings": {
        "Default": "Data Source=Data/MyCourse.db"
    },

    "Courses": {
        "PerPagina": 10,
        "Order": {
            "By": "Title",
            "Ascending": true,
            "Allow": ["Title", "Rating", "CurrentPrice"]
        }
    },

    "CachedTime": {
        "TimeSpanDettaglioCorso": 60,
        "TimeSpanCorsi": 60
    },

    "MemoryCache": {
        "SizeLimit": 1000
    },

    "ResponseCache": {
        "Home": {
            "Duration": 60,
            "Location": "Client",
            "VaryByQueryKeys": ["page"]
        }
    }
}